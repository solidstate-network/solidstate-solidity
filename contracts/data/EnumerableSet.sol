    function toArray(
        AddressSet storage set,
        uint256 startIndex,
        uint256 count
    ) internal view returns (address[] memory array) {
        bytes32[] memory bytes32Array = _toArray(set._inner, startIndex, count);

        assembly {
            array := bytes32Array
